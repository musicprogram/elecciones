<%= current_usuario.email %>
<center>
<h1>Lista de postulados Jornada Tarde Noche</h1>
<div class="contene">
<div class="panel panel-default">
  
  <div class="panel-body">
    <% @representantets.each do |representantet| %>
      <div class="contene2">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><%= representantet.nombre %></h3>
          </div>
          <div class="panel-body">
            
            <%= image_tag(representantet.foto,  height: '250', width: '250') %>
            
            <div class="panel-footer"><%= link_to 'Editar', edit_representantet_path(representantet) %>
            <%= link_to 'Destroy', representantet, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%= link_to like_representantet_path(representantet), method: :put, class: "btn btn-default"  do %>
              <i></i>
              <%= representantet.get_upvotes.size %>
            <% end %>
            </div>
            
          </div>
        </div>
      </div>
    <% end %>
      </div>
  </div>
</div>


<br>

<%= button_to 'New representantet', new_representantet_path, class: "btn btn-info", :method => "get"%>
</center>